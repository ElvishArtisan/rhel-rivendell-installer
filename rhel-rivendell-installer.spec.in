Summary: Rivendell Installer for RedHat-ish systems
Name: rhel-rivendell-installer
Version: @VERSION@
Release: @RPM_RELEASE@%{?dist}
License: GPL
Packager: Fred Gleason <fredg@paravelsystems.com>
Group: Productivity/Multimedia/Other
Source: %{name}-@VERSION@.tar.gz
BuildRoot: /var/tmp/rivendell-install-@VERSION@



%description
Bootstrap script for installing Rivendell on a @DISTRO_NAME@ system.


%prep


%setup


%build
%configure


%install
rm -rf $RPM_BUILD_ROOT
mkdir -p $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer
cp assets/installer_install_rivendell.sh $RPM_BUILD_ROOT/%{_datadir}/rhel-rivendell-installer
cp assets/asihpi.conf $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/selinux.config $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/smb.conf $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/limits.conf $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/xfce-config.tgz $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/rsyslog.conf.patch $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/asound.conf $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/*.repo $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/RPM-GPG-KEY* $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/autologin.patch $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/*.png $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/no_screen_blank.conf $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/auto.rd.audiostore.template $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/auto.misc.client_template $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/auto.misc.template $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/
cp assets/fop-2.6-bin.tar.gz $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/

mkdir -p $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/skel
cp assets/*.pdf $RPM_BUILD_ROOT%{_datadir}/rhel-rivendell-installer/skel/


%clean
rm -rf $RPM_BUILD_ROOT


